<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.starters.medion.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#a8b6bf"
    android:foregroundTint="#deafaf">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ConnectStage_Logo"
        android:src="@drawable/medion_logo"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|text"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/ConnectStage_Username"
        android:foreground="#ffffff"
        android:layout_below="@+id/ConnectStage_Logo"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ConnectStage_Password"
        android:foreground="#ffffff"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/ConnectStage_Username"
        android:layout_alignLeft="@+id/ConnectStage_Username"
        android:layout_alignStart="@+id/ConnectStage_Username"
        android:textColor="#ffffff"
        android:hint="password" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/ConnectStage_Rememberme"
        android:checked="true"
        android:fontFamily="Verdana"
        android:textColor="#ffffff"
        android:layout_below="@+id/ConnectStage_Password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New User?"
        android:id="@+id/ConnectStage_newuser"
        android:textColor="#ffffff"
        android:layout_below="@+id/Connectstage_login"
        android:layout_centerHorizontal="true"
        />

    <com.gc.materialdesign.views.ButtonRectangle

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:id="@+id/ConnectStage_SignUp"
        android:background="#9ad3de"
        android:textStyle="bold"
        android:textColor="#2e2f30"
        android:gravity="bottom"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ConnectStage_newuser"
       />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Forgot Password"
        android:id="@+id/Connectstage_ForgotPassword"
        android:background="#9ad3de"
        android:textColor="#2e2f30"
        android:textAllCaps="false"
        android:layout_below="@+id/ConnectStage_SignUp"
        android:layout_centerHorizontal="true" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/Connectstage_login"
        android:textStyle="bold"
        android:textColor="#2e2f30"
        android:background="#9ad3de"
        android:layout_below="@+id/ConnectStage_Rememberme"
        android:layout_centerHorizontal="true" />
</RelativeLayout>